@model IEnumerable<MyHomework.Models.StudentList>

@{
    ViewBag.Title = "Index";
}
@if (User.IsInRole(MyHomework.Models.Roles.Teacher))
{
    <body>
        <div class="bg-image col-lg-6" style="background-image: url(http://www.freeppt.net/background/textures-notebook-paper-wallpapers-backgrounds-for-powerpoint.jpg); height: 100vh; width: 120vh; ">


            <h2 class=text-center text-danger"><strong>STUDENTS</strong></h2>

            <p>
                @Html.ActionLink("Add New Student", "Create")
            </p>
            @if (TempData.ContainsKey("SaveResult"))
            {
                <div class="col-lg-6 alert alert-danger fade in" role="alert">
                    @ViewBag.SaveResult
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                    @TempData["SaveResult"]
                </div>
            }
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Update Student Info", "Edit", new { id = item.StudentId }) |
                            @Html.ActionLink("Student Details", "Details", new { id = item.StudentId }) |
                            @Html.ActionLink("Delete Student", "Delete", new { id = item.StudentId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </body>
}
@if (User.IsInRole(MyHomework.Models.Roles.Student))
{
    <body>
        <div class="bg-image col-lg-6" style="background-image: url(http://www.freeppt.net/background/textures-notebook-paper-wallpapers-backgrounds-for-powerpoint.jpg); height: 100vh; width: 120vh; ">

            <h2 class=text-center text-danger"><strong>STUDENTS</strong></h2>


            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </body>
}
