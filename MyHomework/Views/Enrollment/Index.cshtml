@model IEnumerable<MyHomework.Models.EnrollmentList>

@{
    ViewBag.Title = "Index";
}
@if (User.IsInRole(MyHomework.Models.Roles.Teacher))
{

    <h2 class=text-center text-danger"><strong>ENROLLMENT LIST</strong></h2>

    <p>
        @Html.ActionLink("Add New Enrollment", "Create")
    </p>
    if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert-success fade in" role="alert">
            @ViewBag.SaveResult
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentId)
                </td>
                <td>
                    @Html.ActionLink("Edit Enrollment", "Edit", new { id = item.EnrollmentId }) |
                    @Html.ActionLink("Enrollment Details", "Details", new { id = item.EnrollmentId }) |
                    @Html.ActionLink("Delete Enrollment", "Delete", new { id = item.EnrollmentId })
                </td>
            </tr>
        }

    </table>
}

