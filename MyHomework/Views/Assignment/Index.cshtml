@model IEnumerable<MyHomework.Models.AssignmentList>

@{
    ViewBag.Title = "Index";
}
@if (User.IsInRole(MyHomework.Models.Roles.Teacher))
{

    <h2 class=text-center text-danger"><strong>ASSIGNMENTS</strong></h2>

    <p>
        @Html.ActionLink("Create New Assignment", "Create")
    </p>
    if (TempData.ContainsKey("SaveResult"))
    {
        <div class="col-lg-6 alert alert-danger fade in" role="alert">
            @ViewBag.SaveResult
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassId)
                </td>
                <td>
                    @Html.ActionLink("Edit Assignment", "Edit", new { id = item.AssignmentId }) |
                    @Html.ActionLink("Assignment Details", "Details", new { id = item.AssignmentId }) |
                    @Html.ActionLink("Delete Assignment", "Delete", new { id = item.AssignmentId })
                </td>
            </tr>
        }

    </table>
}
@if (User.IsInRole(MyHomework.Models.Roles.Student))
{

    <h2 class=text-center text-danger"><strong>ASSIGNMENTS</strong></h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassId)
                </td>
                <td>
                    @Html.ActionLink("Assignment Details", "Details", new { id = item.AssignmentId })
                </td>
            </tr>
        }

    </table>
}
