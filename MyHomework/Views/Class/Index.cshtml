@model IEnumerable<MyHomework.Models.ClassList>

@{
    ViewBag.Title = "Index";
}
@if (User.IsInRole(MyHomework.Models.Roles.Teacher))
{
    <body>
        <div class="bg-image col-lg-6" style="background-image: url(https://cdn.wallpapersafari.com/65/49/4NxIS6.jpg); height: 100vh; width: 120vh; ">

            <h2 class=text-center text-danger"><strong>CLASSES</strong></h2>

            <p class="col-lg-2 text-center text-success" style="font-size:14px; border-style:solid">
                @Html.ActionLink("Add New Class", "Create")
            </p>
            @if (TempData.ContainsKey("SaveResult"))
            {
                <div class="col-lg-6 alert alert-danger fade in" role="alert">
                    @ViewBag.SaveResult
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                    @TempData["SaveResult"]
                </div>
            }
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ClassId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeacherId)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeacherId)
                        </td>
                        <td>
                            @Html.ActionLink("Update", "Edit", new { id = item.ClassId }) |
                            @Html.ActionLink("More Info", "Details", new { id = item.ClassId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ClassId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </body>
}
